<div class="container margin-top-20">
	<div class="logo border-radius-10">
		Chirp! The Next Big Thang
	</div>
</div>

<div class="container margin-top-10">
	<%= form_tag(chirp_path(params[:id]), method: :put) do %>
		<div class="one-chirp border-radius-10">
			<div class="row">
				<div class="col-sm-1">
					<img src="<%= random_bird %>" class="img-responsive" />
				</div>
				<div class="col-sm-11">
					<div class="margin-top-10">
						<textarea name="chirp_text" class="form-control"><%= @chirp.chirp %></textarea>
					</div>
					<div class="margin-top-10 txt-right">
						<button type="submit" name="delete_chirp" value="delete" class="btn btn-danger">Delete Chirp</button>
						<button type="submit" class="btn btn-primary">Edit Chirp</button>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>